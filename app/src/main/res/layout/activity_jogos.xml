            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/button1"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/jogo1"
            android:scaleType="fitCenter"
            android:background="#46e54e"
            android:padding="10dp"/>

        <ImageButton
            android:layout_width="@dimen/button_jogos_width_height"
            android:layout_height="@dimen/button_jogos_width_height"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/button2"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/cadeado"
            android:scaleType="fitCenter"
            android:background="#83a8ff"
            android:padding="10dp"/>

