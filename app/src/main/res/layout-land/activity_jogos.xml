<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.geometricos.geometricos.MainActivity"
    android:scrollbars="vertical|horizontal"
    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="2"
        android:columnCount="5"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentStart="false"
        android:layout_centerInParent="true">

        <ImageButton
            android:layout_width="@dimen/button_jogos_width_height"
            android:layout_height="@dimen/button_jogos_width_height"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/button1"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/cadeado"
            android:scaleType="fitCenter"
            android:background="#46e54e"/>

        <ImageButton
            android:layout_width="@dimen/button_jogos_width_height"
            android:layout_height="@dimen/button_jogos_width_height"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/button2"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/cadeado"
            android:scaleType="fitCenter"
            android:background="#ff4081" />

        <ImageButton
            android:layout_width="@dimen/button_jogos_width_height"
            android:layout_height="@dimen/button_jogos_width_height"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/button3"
            android:layout_row="0"
            android:layout_column="2"
            android:src="@drawable/cadeado"
            android:scaleType="fitCenter"
            android:background="#ffe600" />

        <ImageButton
            android:layout_width="@dimen/button_jogos_width_height"
            android:layout_height="@dimen/button_jogos_width_height"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/button4"
            android:layout_row="0"
            android:layout_column="3"
            android:src="@drawable/cadeado"
            android:scaleType="fitCenter"
            android:background="#00eeff" />

        <ImageButton
            android:layout_width="@dimen/button_jogos_width_height"
            android:layout_height="@dimen/button_jogos_width_height"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/button5"
            android:layout_row="0"
            android:layout_column="4"
            android:src="@drawable/cadeado"
            android:scaleType="fitCenter"
            android:background="#ffa060" />

        <ImageButton
            android:layout_width="@dimen/button_jogos_width_height"
            android:layout_height="@dimen/button_jogos_width_height"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/button6"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/cadeado"
            android:scaleType="fitCenter"
            android:background="#e74cff" />

        <ImageButton
            android:layout_width="@dimen/button_jogos_width_height"
            android:layout_height="@dimen/button_jogos_width_height"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/button7"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/cadeado"
            android:scaleType="fitCenter"
            android:background="#8e8e8e" />

        <ImageButton
            android:layout_width="@dimen/button_jogos_width_height"
            android:layout_height="@dimen/button_jogos_width_height"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/button8"
            android:layout_row="1"
            android:layout_column="2"
            android:src="@drawable/cadeado"
            android:scaleType="fitCenter"
            android:background="#577eff" />

        <ImageButton
            android:layout_width="@dimen/button_jogos_width_height"
            android:layout_height="@dimen/button_jogos_width_height"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/button9"
            android:layout_row="1"
            android:layout_column="3"
            android:src="@drawable/cadeado"
            android:scaleType="fitCenter"
            android:background="#8948f9" />

        <ImageButton
            android:layout_width="@dimen/button_jogos_width_height"
            android:layout_height="@dimen/button_jogos_width_height"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/button10"
            android:layout_row="1"
            android:layout_column="4"
            android:src="@drawable/cadeado"
            android:scaleType="fitCenter"
            android:background="#ff4747" />
    </GridLayout>
</RelativeLayout>
